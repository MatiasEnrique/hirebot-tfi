        // Google Translate initialization flag
        var googleTranslateReady = false;

        // Initialize Google Translate
        function googleTranslateElementInit() {
            try {
                new google.translate.TranslateElement({
                    pageLanguage: 'es',
                    includedLanguages: allLanguages.map(function(l) { return l.code; }).join(','),
                    autoDisplay: false
                }, 'google_translate_element');
                googleTranslateReady = true;
                console.log('âœ… Google Translate inicializado correctamente');
            } catch (e) {
                console.error('âŒ Error inicializando Google Translate:', e);
            }
